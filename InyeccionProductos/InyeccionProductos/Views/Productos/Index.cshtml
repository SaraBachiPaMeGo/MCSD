@model IEnumerable<InyeccionProductos.Models.Productos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NOMBRE
        </th>
        <th>
            DESCRIPCION
        </th>
        <th>
            IMAGEN
            
        </th>
        <th>
            PRECIO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            <img src="@item.Foto" style="width:150px; height:200px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        
    </tr>
}

</table>
