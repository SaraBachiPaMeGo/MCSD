@model InyeccionDepartamentos.Models.Departamento

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Departamento</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class = "control-label col-md-2">Número:</label>
        <div class="col-md-10">
            <input class="form-control" type="number" name="Dept_no"  />
            @Html.ValidationMessageFor(model => model.Dept_no)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Nombre:</label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="DNombre"  />
            @Html.ValidationMessageFor(model => model.DNombre)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Localidad:</label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="Loc"  />
            @Html.ValidationMessageFor(model => model.Loc)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <h1>@ViewBag.DatosIncorrectos</h1>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


