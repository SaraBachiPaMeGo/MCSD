
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi primer App Core</title>
    <environment exclude="Development">
        <link href="~/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/cookiealert.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <link href="~/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/cookiealert.css" rel="stylesheet" />
    </environment>
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <partial name="_PartialCookieConsent" />
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div>
                @*//class="navbar-collapse collapse"*@
                <ul class="nav navbar-nav">
                    <li><a asp-action="Index" asp-controller="Coches" class="nav-link">Coches DI</a></li>
                    <li><a asp-action="Index" asp-controller="Home" class="nav-link">Index</a></li>
                    <li><a asp-action="SesionSimple" asp-controller="Sesion" class="nav-link">Sesion</a></li>
                    <li><a asp-action="SesionObjeto" asp-controller="Sesion" class="nav-link">Sesion objeto</a></li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <button type="button" id="btn" class="btn-success">Botón</button>
        <p style="color:red" id="msj">Voy a cambiar</p>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi primer App Core</p>
        </footer>
    </div>

    <environment exclude="Development">
        <script src="~/js/jquery-3.3.1.js"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/js/cookiealert.js"></script>
    </environment>
    <environment include="Production">
        <script src="~/js/jquery-3.3.1.js"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/js/cookiealert.js"></script>
    </environment>
    @RenderSection("scripts",false)
    <script>
        $(document).ready(function () {
            $("#btn").click(function () {
                $("#msj").text("He cambiado");
                $("#msj").attr("style",'color:blue');
            });
        });
    </script>
</body>
</html>
